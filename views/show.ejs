<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
    table {
      width: 80%;
      border-collapse: collapse;
      margin: 20px auto;
      font-family: Arial, sans-serif;
    }

    th, td {
      border: 1px solid #dddddd;
      padding: 12px 15px;
      text-align: center;
    }

    th {
      background-color: #4CAF50;
      color: white;
    }

    tr:nth-child(even) {
      background-color: #f2f2f2;
    }

    h2 {
      text-align: center;
    }
  </style>
</head>

<body>

  <h2>User List</h2>

  <table>
    <thead>
      <tr>
        <th>userid</th>
        <th>email</th>
        <th>username</th>
      </tr>
    </thead>
    <tbody>
      <% for(user of users) { %>
        <tr>
          <td><%= user.userid %></td>
          <td><%= user.email %></td>
          <td><%= user.username %></td>
          <td>
            <form method="GET" action="/user/<%=user.userid%>/edit">
                <button>edit username</button>

            </form>
          </td>
          <td>
            <form method="get" action="/user/<%=user.userid%>/delete">
            <button>Delete</button>
          </form>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>

</body>
</html>
